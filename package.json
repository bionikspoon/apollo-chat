{
  "name": "apollo-chat",
  "version": "0.0.0",
  "description": "Chat app with apollo subscriptions",
  "repository": "git@github.com:bionikspoon/apollo-chat.git",
  "author": "Manu Phatak <manu@thinkcerca.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "8.12.x",
    "npm": "6.4.x",
    "yarn": "1.10.x"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.6.1",
    "@koa/cors": "^2.2.2",
    "apollo-cache": "^1.1.17",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.3",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.5",
    "apollo-link-state": "^0.4.2",
    "apollo-link-ws": "^1.0.9",
    "apollo-server-koa": "^2.1.0",
    "apollo-utilities": "^1.0.21",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.9.2",
    "koa": "^2.5.3",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.2.17",
    "normalize.css": "^8.0.0",
    "ramda": "^0.25.0",
    "react": "^16.5.2",
    "react-apollo": "^2.1.11",
    "react-dom": "^16.5.2",
    "react-scripts-ts": "2.17.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.0",
    "@types/jest": "^23.3.2",
    "@types/koa": "^2.0.46",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-static": "^4.0.0",
    "@types/koa__cors": "^2.2.3",
    "@types/mongoose": "^5.2.17",
    "@types/node": "^10.10.3",
    "@types/ramda": "^0.25.38",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "concurrently": "^4.0.1",
    "husky": "^1.0.0-rc.15",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "scripts": {
    "build": "concurrently 'yarn build:client' 'yarn build:server'",
    "build:client": "react-scripts-ts build",
    "build:server": "tsc",
    "heroku-postbuild": "yarn build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "watch": "concurrently --kill-others 'yarn watch:client' 'yarn watch:server'",
    "watch:client": "react-scripts-ts start",
    "watch:server": "nodemon --watch 'src/server/**/*' -e ts,tsx --exec 'ts-node' ./src/server/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "proxy": {
    "/graphql": {
      "target": "http://localhost:4000",
      "ws": true
    }
  }
}
